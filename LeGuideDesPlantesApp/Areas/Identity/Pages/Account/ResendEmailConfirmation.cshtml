@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
}



<section class=" backgroundlogin">
    <div class="row justify-content-center paddingTop">

        <div class="col-md-6">
            <div class="login-box">
                <h2>Renvoyer Mail de confirmation</h2>
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="user-box">
                        <input type="password" asp-for="Input.Email" aria-required="true">
                        <label asp-for="Input.Email"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <button type="submit" class=" w-100 btn btn-lg">
                        
                        Envoyer
                    </button>
                </form>

            </div>
        </div>


    </div>

</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
