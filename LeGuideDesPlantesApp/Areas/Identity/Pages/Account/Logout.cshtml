@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}


@if(User.Identity.IsAuthenticated)
{

<section class=" backgroundlogin">
    <div class="row justify-content-center paddingTop">
        <div class="col-md-6">
            <div class="login-box">
                <h2>@ViewData["Title"]</h2>
                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                    
                    
                    
                   
                        <button type="submit" class=" w-100 btn btn-lg">
                        
                        Se déconnecter
                    </button>
                </form>
                
            </div>
        </div>


    </div>

</section>

}