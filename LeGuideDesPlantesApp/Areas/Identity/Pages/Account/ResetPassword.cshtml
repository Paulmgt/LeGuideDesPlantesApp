@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}



<section class=" backgroundlogin">
    <div class="row justify-content-center paddingTop">
        <div class="col-md-6">
            <div class="login-box">
                <h2>@ViewData["Title"]</h2>
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="user-box" hidden="hidden">
                        <input type="text" asp-for="Input.Code" type="hidden">
                    </div>
                    <div class="user-box">
                        <input type="text" asp-for="Input.Email" autocomplete="username" aria-required="true">
                        <label asp-for="Input.Email"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="user-box">
                        <input type="password" asp-for="Input.Password" autocomplete="new-password" aria-required="true">
                        <label asp-for="Input.Password"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>

                    </div>
                    <div class="user-box">
                        <input type="password" asp-for="Input.ConfirmPassword" autocomplete="new-password" aria-required="true">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

                    </div>
                    <button type="submit" class=" w-100 btn btn-lg">
                       
                        Enregistrer
                    </button>
                </form>
                <ul class="navbar-nav">
                   
                    <li class="nav-item">

                        <a class="nav-link " asp-page="./Register">Crée un compte</a>
                    </li>

                </ul>
            </div>
        </div>





    </div>

</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
