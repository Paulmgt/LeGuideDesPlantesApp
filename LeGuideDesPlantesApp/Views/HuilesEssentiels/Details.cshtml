<!--timeline sec start-->
<div class="timeline-sec" id="timeline-sec">

    <div class="timeline-overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-12 text-center timeline-heading">
                <span class="sub-heading"></span>
                <h4 class="large-heading">@Html.DisplayFor(model => model.Nom)</h4>
                <span class="fly-line"></span>
            </div>
            <div class="col-12">
