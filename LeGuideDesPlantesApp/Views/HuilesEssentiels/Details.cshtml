                    <div class="col-12">
                        <div class="t-year">
                            <h6 class="heading">Caractéristiques</h6>
                        </div>
                    </div>
                </div>
                <ul class="timeline">
                    <li class="timeline-block inverse-timeline wow fadeInRight" data-wow-delay=".2s">
                        <div class="event-details">
                            <h6 class="event-heading">Composition</h6>
                            <p class="text-des">@Html.DisplayFor(model => model.ComposantPrincipal)</p>

                        </div>
                    </li>
                    <li class="timeline-block simple-timeline wow fadeInLeft">
