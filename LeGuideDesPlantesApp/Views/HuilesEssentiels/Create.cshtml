                                        <span asp-validation-for="SensualitePourCouples" class="text-danger"></span>
                                    </div>
                                     <div class="col-md-6 mb-3">
                                    </div>
                                    
                                    <div class="col-md-6 mb-3">
                                        <input class="form-control m-mb-20" asp-for="Precaution" aria-required="true" />
                                        <label style="padding-top: 2px" asp-for="Precaution" class="form-label"></label>
                                        <span asp-validation-for="Precaution" class="text-danger"></span>
                                    </div>
                                     <div class="col-md-6 mb-3">
                                    </div>
                                    
                                    <div class="col-md-6 mb-3">
                                        <select class="form-control m-mb-20" asp-for="PlantesSauvagesId" asp-items="ViewBag.PlantesSauvagesId"> 
                                            <option value="@null" placeholder="Selectionné une plante"></option>
                                        </select>
                                        <label style="padding-top: 2px" asp-for="PlantesSauvagesId" class="form-label"></label>
                                        
                                    </div>
                                     <div class="col-md-6 mb-3">
                                    </div>
                                    
                                    <div class="col-md-6 mb-3">
                                        <select class="form-control m-mb-20" asp-for="PlantesAromatiquesId" aria-required="false" asp-items="ViewBag.PlantesAromatiquesId">
                                            <option value="@null" placeholder="Selectionné une plante"></option></select>
                                        <label style="padding-top: 2px" asp-for="PlantesAromatiquesId" class="form-label"></label>
                                        
                                    </div>
                                   
                                    

                                    </div>

                                 

                                <div class="row">
                                    <div class="col-md-6 text-center text-md-center">
                                        <button type="submit" value="Create" class="mt-3 btn btn-rounded btn-large btn-pink fadeInDown-slide animated  text-uppercase">
                                           Enregistrer
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 mb-3" style="padding-top: 20px">
                                <ul class="navbar-nav">
                                    <li class="nav-item">
                                        <a class="nav-link "  asp-action="Index">Retour Vue</a>
                                    </li>
                                    

                                </ul>


                            </div>
                        </div>


                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
