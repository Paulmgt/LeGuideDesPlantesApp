@model LeGuideDesPlantesApp.Models.HuilesEssentiel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<!--slider sec strat-->
<section id="slider-sec" class="slider-sec parallax backgroundlogin" >
    <div class="overlay text-center d-flex justify-content-center align-items-center">
        <div class="slide-contain">
            <h4>Nouvelle Huile</h4>
            <div class="crumbs">
                <nav aria-label="breadcrumb" class="breadcrumb-items">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>
<!--slider sec end-->


<section class="form-bg parallax parallaxie">

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="appointment-box">

                    <div class="form-title"><h2>Nouvelle Plante Sauvage</h2></div>
                    <div class="form-para"><p></p></div>
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="col-sm-6"></div>

                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <input class="form-control m-mb-20" asp-for="Nom" aria-required="true" />
                                        <label style="padding-top: 2px" asp-for="Nom" class="form-label"></label>
                                        <span asp-validation-for="Nom" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <input class="form-control m-mb-20" asp-for="NomLatin" />
                                        <label style="padding-top: 2px" asp-for="NomLatin" class="form-label"></label>

                                    </div>
                                    <div class="col-md-6 mb-3">
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="form-check-input"></div>
                                        <input class="form-control m-mb-20" asp-for="Photos"
                                               onchange="document.getElementById('photoHuiles').src=window.URL.createObjectURL(this.files[0])"
                                               multiple type="file" class="form-control" /> 
                                               <img id="photoHuiles" class="fileImage" />
                                        <label style="margin-left:2.5rem" asp-for="Photos">  </label>
                                        <span asp-validation-for="Photos" class="text-danger"></span>
                                    </div>
                                     <div class="col-md-6 mb-3">
                                    </div>
                                     
                                    <div class="col-md-6 mb-3">
                                        <input class="form-control m-mb-20" asp-for="Famille" aria-required="true" />
                                        <label style="padding-top: 2px" asp-for="Famille" class="form-label"></label>
                                        <span asp-validation-for="Famille" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                    </div>
                                     
                                    <div class="col-md-6 mb-3">
                                        <input class="form-control m-mb-20" asp-for="MethodeExtraction" aria-required="true" />
                                        <label style="padding-top: 2px" asp-for="MethodeExtraction" class="form-label"></label>
                                        <span asp-validation-for="MethodeExtraction" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                    </div>
                                     
                                    <div class="col-md-6 mb-3">
                                        <input class="form-control m-mb-20" asp-for="ComposantPrincipal" aria-required="true" />
                                        <label style="padding-top: 2px" asp-for="ComposantPrincipal" class="form-label"></label>
                                        <span asp-validation-for="ComposantPrincipal" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                    </div>
                                     
                                    <div class="col-md-6 mb-3">
                                        <input class="form-control m-mb-20" asp-for="Conservation" aria-required="true" />
                                        <label style="padding-top: 2px" asp-for="Conservation" class="form-label"></label>
                                        <span asp-validation-for="Conservation" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                    </div>
                                   
                                    <div class="col-md-6 mb-3">
                                        <input class="form-control m-mb-20" asp-for="ProprietePrincipal" aria-required="true" />
                                        <label style="padding-top: 2px" asp-for="ProprietePrincipal" class="form-label"></label>
                                        <span asp-validation-for="ProprietePrincipal" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                    </div>
                                     
                                    <div class="col-md-6 mb-3">
                                        <input class="form-control m-mb-20" asp-for="ActionSurLeCorps" aria-required="true" />
                                        <label style="padding-top: 2px" asp-for="ActionSurLeCorps" class="form-label"></label>
                                        <span asp-validation-for="ActionSurLeCorps" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                    </div>
                                     
                                    <div class="col-md-6 mb-3">
                                        <input class="form-control m-mb-20" asp-for="Circulation" aria-required="true" />
                                        <label style="padding-top: 2px" asp-for="Circulation" class="form-label"></label>
                                        <span asp-validation-for="Circulation" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                    </div>
                                    
                                    <div class="col-md-6 mb-3">
                                        <input class="form-control m-mb-20" asp-for="Digestion" aria-required="true" />
                                        <label style="padding-top: 2px" asp-for="Digestion" class="form-label"></label>
                                        <span asp-validation-for="Digestion" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                    </div>
                                     
                                    <div class="col-md-6 mb-3">
                                        <input class="form-control m-mb-20" asp-for="MusclesEtArticulations" aria-required="true" />
                                        <label style="padding-top: 2px" asp-for="MusclesEtArticulations" class="form-label"></label>
                                        <span asp-validation-for="MusclesEtArticulations" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                    </div>
                                     
                                    <div class="col-md-6 mb-3">
                                        <input class="form-control m-mb-20" asp-for="PeauEtCheveux" aria-required="true" />
                                        <label style="padding-top: 2px" asp-for="PeauEtCheveux" class="form-label"></label>
                                        <span asp-validation-for="PeauEtCheveux" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                    </div>
                                     
                                    <div class="col-md-6 mb-3">
                                        <input class="form-control m-mb-20" asp-for="ProblemesFeminins" aria-required="true" />
                                        <label style="padding-top: 2px" asp-for="ProblemesFeminins" class="form-label"></label>
                                        <span asp-validation-for="ProblemesFeminins" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                    </div>
                                     
                                    <div class="col-md-6 mb-3">
                                        <input class="form-control m-mb-20" asp-for="GrossesEtEnfants" aria-required="true" />
                                        <label style="padding-top: 2px" asp-for="GrossesEtEnfants" class="form-label"></label>
                                        <span asp-validation-for="GrossesEtEnfants" class="text-danger"></span>
                                    </div>
                                     <div class="col-md-6 mb-3">
                                    </div>
                                    
                                    <div class="col-md-6 mb-3">
                                        <input class="form-control m-mb-20" asp-for="SensualitePourCouples" aria-required="true" />
