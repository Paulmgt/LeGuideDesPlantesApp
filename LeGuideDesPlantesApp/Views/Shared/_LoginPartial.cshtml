@using LeGuideDesPlantesApp.Data
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <div class="col-lg-20 col-md-0 col-sm-0 text-center position-relative pr-0 d-fix d-sm-block justify-content-around">

        <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" class="font-14 whitecolor hover-default">
            <i class="fas fa-user mr-2"></i>
            Bonjour @User.Identity?.Name
        </a>
    </div>
    <div class="col-lg-20 col-md-0 col-sm-0 text-center position-relative pr-0 d-fix d-sm-block justify-content-around">

        <a class="font-14 whitecolor hover-default" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <svg xmlns="http://www.w3.org/2000/svg" width="12.75" height="14.4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="feather feather-log-out"><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path><polyline points="16 17 21 12 16 7"></polyline><line x1="21" y1="12" x2="9" y2="12"></line></svg>

            Logout
        </a>
    </div>

}
else
{

    <div class="col-lg-20 col-md-0 col-sm-0 text-center position-relative pr-0 d-fix d-sm-block justify-content-around">
        <a asp-area="Identity" asp-page="/Account/Login" class="font-14 whitecolor hover-default"><i class="fas fa-user mr-2"></i>Login</a>
        <div class="bg-transparent d-inline-block d-xs-none position-relative mr-2 ml-2"></div>
        <a asp-area="Identity" asp-page="/Account/Register" class="font-14 whitecolor hover-default"><i class="fas fa-lock mr-2"></i>Register</a>
    </div>
}



