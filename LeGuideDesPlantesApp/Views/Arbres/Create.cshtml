@model LeGuideDesPlantesApp.Models.Arbres

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--slider sec strat-->
<section id="slider-sec" class="slider-sec parallax backgroundlogin">
    <div class="overlay text-center d-flex justify-content-center align-items-center">
        <div class="slide-contain">
            <h4>Nouvel Arbre</h4>
            <div class="crumbs">
                <nav aria-label="breadcrumb" class="breadcrumb-items">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>
<!--slider sec end-->


<section class="form-bg parallax parallaxie">

    <div class="container">
        <div class="row">
            <div class="col-md-12 ">
                

                    <div class="form-title"><h2>Nouvelle Plante Sauvage</h2></div>
                    <div class="form-para"><p></p></div>
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            

                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <input class="form-control m-mb-20" asp-for="Nom" aria-required="true" />
                                        <label style="padding-top: 2px" asp-for="Nom" class="form-label"></label>
                                        <span asp-validation-for="Nom" class="text-danger"></span>
                                    </div>

                                     <div class="col-md-6 mb-3" >
                                        <div class="form-check-input"></div>
                                        <input class="form-control m-mb-20 text-uppercase" asp-for="Photos"
                                               onchange="document.getElementById('photoArbres').src=window.URL.createObjectURL(this.files[0])"
                                               multiple type="file"  />
                                               
                                               <img id="photoArbres" class="fileImage"/>
                                              
                                        <label style="margin-left:2.5rem" asp-for="Photos">  </label>
                                        <span asp-validation-for="Photos" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <textarea class="form-control m-mb-20 textarea1" id="textArea" asp-for="Description"></textarea>
                                        <label style="padding-top: 2px" asp-for="Description" class="form-label"></label>

                                    </div>
                                     
                                    <div class="col-md-6 mb-3">
                                        <input class="form-control m-mb-20" asp-for="Habitat" aria-required="true" />
                                        <label style="padding-top: 2px" asp-for="Habitat" class="form-label"></label>
                                        <span asp-validation-for="Habitat" class="text-danger"></span>
                                    </div>

                                   
                                     
                                    <div class="col-md-6 mb-3">
                                        <input class="form-control m-mb-20" asp-for="Danger" aria-required="true" />
                                        <label style="padding-top: 2px" asp-for="Danger" class="form-label"></label>
                                        <span asp-validation-for="Danger" class="text-danger"></span>
                                    </div>

                                    
                                     
                                    <div class="col-md-6 mb-3">
                                        <input class="form-control m-mb-20" asp-for="BienFait" aria-required="true" />
                                        <label style="padding-top: 2px" asp-for="BienFait" class="form-label"></label>
                                        <span asp-validation-for="BienFait" class="text-danger"></span>
                                    </div>

                                   
                                     
                                    <div class="col-md-6 mb-3">
                                        <input class="form-control m-mb-20" asp-for="Culture" aria-required="true" />
                                        <label style="padding-top: 2px" asp-for="Culture" class="form-label"></label>
                                        <span asp-validation-for="Culture" class="text-danger"></span>
                                    </div>

                                    
                                   
                                    <div class="col-md-6 mb-3">
                                        <input class="form-control m-mb-20" asp-for="Taille" aria-required="true" />
                                        <label style="padding-top: 2px" asp-for="Taille" class="form-label"></label>
                                        <span asp-validation-for="Taille" class="text-danger"></span>
                                    </div>

                                    
                                     
                                    <div class="col-md-6 mb-3">
                                        <input class="form-control m-mb-20" asp-for="Rusticite" aria-required="true" />
                                        <label style="padding-top: 2px" asp-for="Rusticite" class="form-label"></label>
                                        <span asp-validation-for="Rusticite" class="text-danger"></span>
                                    </div>

                                  

                                    <div class="col-md-6 mb-3">
                                        <input class="form-control m-mb-20" asp-for="Maladies" aria-required="true" />
                                        <label style="padding-top: 2px" asp-for="Maladies" class="form-label"></label>
                                        <span asp-validation-for="Maladies" class="text-danger"></span>
                                    </div>

                                    
                                    
                                    <div class="col-md-6 mb-3">
                                        <input class="form-control m-mb-20" asp-for="PeriodeDeFleuraison" aria-required="true" />
                                        <label style="padding-top: 2px" asp-for="PeriodeDeFleuraison" class="form-label"></label>
                                        <span asp-validation-for="PeriodeDeFleuraison" class="text-danger"></span>
                                    </div>

                                    
                                     
                                    <div class="col-md-6 mb-3">
                                        <input class="form-control m-mb-20" asp-for="Entretiens" aria-required="true" />
                                        <label style="padding-top: 2px" asp-for="Entretiens" class="form-label"></label>
                                        <span asp-validation-for="Entretiens" class="text-danger"></span>
                                    </div>

                                    
                                     
                                    <div class="col-md-6 mb-3">
                                        <input class="form-control m-mb-20" asp-for="Arosage" aria-required="true" />
                                        <label style="padding-top: 2px" asp-for="Arosage" class="form-label"></label>
                                        <span asp-validation-for="Arosage" class="text-danger"></span>
                                    </div>

                                   
                                     
                                    <div class="col-md-6 mb-3">
                                        <input class="form-control m-mb-20" asp-for="Voisinage" aria-required="true" />
                                        <label style="padding-top: 2px" asp-for="Voisinage" class="form-label"></label>
                                        <span asp-validation-for="Voisinage" class="text-danger"></span>
                                    </div>

                                    
                                     
                                    <div class="col-md-6 mb-3">
                                        <input class="form-control m-mb-20" asp-for="PrefenrenceTerrain" aria-required="true" />
                                        <label style="padding-top: 2px" asp-for="PrefenrenceTerrain" class="form-label"></label>
                                        <span asp-validation-for="PrefenrenceTerrain" class="text-danger"></span>
                                    </div>
                                    
                                   </div>

                                

                                <div class="row">
                                    <div class="col-md-6 text-center text-md-center">
                                        <button type="submit" value="Create" class="mt-3 btn btn-rounded btn-large btn-pink fadeInDown-slide animated  text-uppercase">
                                           Enregistrer
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 mb-3" style="padding-top: 20px">
                                <ul class="navbar-nav">
                                    <li class="nav-item">
                                        <a class="nav-link "  asp-action="Index">Retour Vue</a>
                                    </li>
                                    

                                </ul>


                            </div>
                        </div>


                    </form>
                
            </div>
        </div>
    </div>
</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
